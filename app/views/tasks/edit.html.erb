<h2>Edit <%= @task.title %></h2>

<%= form_with model: @task do |f| %>
  <div class="card">
    <div class="mb-3">
      <%= f.label :title, { class: "form-label"} %>
      <%= f.text_field :title, { class: "form-control", placeholder: "Title" } %>
    </div>
    <div class="mb-3">
      <%= f.label :details, { class: "form-label"} %>
      <%= f.text_field :details, { class: "form-control", placeholder: "Details" } %>
    </div>
    <div class="mb-3">
      <%= f.label :completed, { class: "form-label"} %>
      <%= f.check_box :completed %>
    </div>
    <%= f.submit class: "button"  %>
  </div>
<% end %>
<p class="centered"><%= link_to "Back to task list", root_path %></p>
