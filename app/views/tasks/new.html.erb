<h2>Add a new task</h2>

<%= form_with model: @task do |f| %>
  <div class="card">
    <div class="mb-3">
      <%= f.label :title, { class: "form-label"} %>
      <%= f.text_field :title, { class: "form-control", placeholder: "Title" } %>
    </div>
    <div class="mb-3">
      <%= f.label :details, { class: "form-label"} %>
      <%= f.text_field :details, { class: "form-control", placeholder: "Title" } %>
    </div>
    <div class="mb-3">
      <%= f.label :completed %>
      <%= f.check_box :completed, { class: "form-label"} %>
    </div>
    <%= f.submit class: "button" %>
  </div>
<% end %>

<p class="centered"><%= link_to "Back to task list", root_path %></p>
