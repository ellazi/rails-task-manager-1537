<h2><%= @task.title %></h2>
<p class="details"><%= @task.details %></p>
<p><%= @task.completed ? "<i class='fa-regular fa-square-check'></i> Task completed!!! You can rest!".html_safe : "<i class='fa-regular fa-square'></i> You still have to do this...you better get started".html_safe %></p>
<ul>
  <li><%= link_to "Edit", edit_task_path(@task) %></li>
  <li>
    <%= link_to "Delete",
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </li>
  <li><%= link_to "Back to task list", root_path %></li>
</ul>
